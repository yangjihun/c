#include <stdio.h>
#include <string.h>
#define NUM 5
#define MAX 20

struct DATASET {
	char name[MAX];
	int age;
	char hobby[MAX];
};

struct INDEX {
	char name[MAX];
};

int copy(struct DATASET[]);

int main() {
	struct DATASET dataset[NUM];
	struct INDEX index[NUM];
	char name[MAX];
	int i;
	int j;
	char n;
	for (i = 0; i < NUM; i = i + 1) {
		printf("name: ");
		scanf_s("%s", dataset[i].name, MAX);
		printf("age: ");
		scanf_s("%d", &dataset[i].age);
		printf("hobby: ");
		scanf_s("%s", dataset[i].hobby, MAX);
	}
	/* store into index */
	for (i = 0; i < NUM; i = i + 1) {
		dataset[i].name == index[i].name;
	}
	/* input name */
	printf("enter name: ");
	scanf_s("%s", name, MAX);
	for (i = 0; i < NUM; i = i + 1) {
		copy(&dataset[i]);
	}
}

int copy(struct DATASET* dataset) {
	printf("%s\t%d\t%s\n", (*dataset).name, (*dataset).age, (*dataset).hobby);
}
